@model manyasligida.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap - Manyaslı Gıda";
}

<!-- Page Header -->
<section class="page-header" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); padding: 120px 0 80px;">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8" data-aos="fade-up">
                <h1 class="text-white fw-bold mb-3">Giriş Yap</h1>
                <p class="text-white-50 mb-0">Hesabınıza giriş yaparak alışverişe başlayın</p>
            </div>
        </div>
    </div>
</section>

<!-- Login Section -->
<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg border-0" data-aos="fade-up">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="login-icon mb-3">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <h2 class="fw-bold text-dark mb-2">Hoş Geldiniz</h2>
                            <p class="text-muted">Hesabınıza giriş yapın</p>
                        </div>

                        @if (TempData["EmailVerificationSuccess"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["EmailVerificationSuccess"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-2"></i>E-posta Adresi
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-envelope text-muted"></i>
                                    </span>
                                    <input asp-for="Email" id="emailInput" class="form-control border-start-0" placeholder="ornek@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-bold">
                                    <i class="fas fa-lock me-2"></i>Şifre
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-lock text-muted"></i>
                                    </span>
                                    <input asp-for="Password" type="password" id="passwordInput" class="form-control" placeholder="Şifrenizi girin" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Beni hatırla
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="text-muted mb-3">Hesabınız yok mu?</p>
                                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary">
                                    <i class="fas fa-user-plus me-2"></i>Üye Ol
                                </a>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="text-muted mb-3">Veya şununla giriş yapın:</p>
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-outline-secondary flex-fill" type="button">
                                    <i class="fab fa-google me-2"></i>Google
                                </button>
                                <button class="btn btn-outline-secondary flex-fill" type="button">
                                    <i class="fab fa-facebook-f me-2"></i>Facebook
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Info Cards -->
                <div class="row mt-4 g-3">
                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-shipping-fast text-primary mb-3" style="font-size: 2rem;"></i>
                                <h5 class="fw-bold">Hızlı Teslimat</h5>
                                <p class="text-muted mb-0">1-3 iş günü içinde kapınızda</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-shield-alt text-primary mb-3" style="font-size: 2rem;"></i>
                                <h5 class="fw-bold">Güvenli Alışveriş</h5>
                                <p class="text-muted mb-0">SSL sertifikalı güvenli ödeme</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .page-header {
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .login-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .login-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .card {
        border-radius: var(--border-radius-lg);
        overflow: hidden;
    }

    .input-group-text {
        border: 1px solid #dee2e6;
        border-right: none;
    }

    .form-control {
        border: 1px solid #dee2e6;
        padding: 12px 16px;
        border-radius: 0;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25);
    }

    .input-group .form-control:focus {
        border-left-color: #dee2e6;
    }

    .btn {
        border-radius: var(--border-radius);
        font-weight: 600;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, #c0392b 100%);
        border: none;
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #c0392b 0%, var(--primary-color) 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
    }

    .btn-outline-primary {
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        background: transparent;
    }

    .btn-outline-primary:hover {
        background: var(--primary-color);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.3);
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25);
    }

    .alert {
        border-radius: var(--border-radius);
        border: none;
    }

    .text-danger {
        color: var(--danger-color) !important;
    }

    /* Google OAuth Button Styles */
    .btn-google {
        background: #fff;
        border: 1px solid #dadce0;
        color: #3c4043;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-google:hover {
        background: #f8f9fa;
        border-color: #dadce0;
        color: #3c4043;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .btn-google i {
        color: #4285f4;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .card-body {
            padding: 2rem !important;
        }
        
        .login-icon {
            width: 60px;
            height: 60px;
        }
        
        .login-icon i {
            font-size: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1.5rem !important;
        }
        
        .btn {
            padding: 10px 20px;
        }
    }
</style>

