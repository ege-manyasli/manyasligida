@model manyasligida.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>
                        Şifremi Unuttum
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        E-posta adresinizi girin. Size şifre sıfırlama bağlantısı göndereceğiz.
                    </p>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                E-posta Adresi
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Şifre Sıfırlama Bağlantısı Gönder
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            Giriş Sayfasına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
