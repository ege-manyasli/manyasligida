@model manyasligida.Models.RegisterViewModel
@{
    ViewData["Title"] = "Üye Ol - Manyaslı Gıda";
}

<!-- Page Header -->
<section class="page-header" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); padding: 120px 0 80px;">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8" data-aos="fade-up">
                <h1 class="text-white fw-bold mb-3">Üye Ol</h1>
                <p class="text-white-50 mb-0">Hemen üye olun ve özel fırsatlardan yararlanın</p>
            </div>
        </div>
    </div>
</section>

<!-- Register Section -->
<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg border-0" data-aos="fade-up">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="register-icon mb-3">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h2 class="fw-bold text-dark mb-2">Hesap Oluşturun</h2>
                            <p class="text-muted">Hızlı ve güvenli üyelik</p>
                        </div>

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row g-3">
                                <!-- First Name -->
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>Ad
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-user text-muted"></i>
                                        </span>
                                        <input asp-for="FirstName" id="firstNameInput" class="form-control border-start-0" placeholder="Adınız" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>Soyad
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-user text-muted"></i>
                                        </span>
                                        <input asp-for="LastName" id="lastNameInput" class="form-control border-start-0" placeholder="Soyadınız" />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-12">
                                    <label asp-for="Email" class="form-label fw-bold">
                                        <i class="fas fa-envelope me-2"></i>E-posta Adresi
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input asp-for="Email" type="email" id="emailInput" class="form-control border-start-0" placeholder="ornek@email.com" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label fw-bold">
                                        <i class="fas fa-phone me-2"></i>Telefon
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-phone text-muted"></i>
                                        </span>
                                        <input asp-for="Phone" id="phoneInput" class="form-control border-start-0" placeholder="0555 123 45 67" />
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <!-- City -->
                                <div class="col-md-6">
                                    <label asp-for="City" class="form-label fw-bold">
                                        <i class="fas fa-city me-2"></i>Şehir
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-city text-muted"></i>
                                        </span>
                                        <select asp-for="City" id="cityInput" class="form-control border-start-0">
                                            <option value="">Şehir seçin</option>
                                            <option value="İstanbul">İstanbul</option>
                                            <option value="Ankara">Ankara</option>
                                            <option value="İzmir">İzmir</option>
                                            <option value="Bursa">Bursa</option>
                                            <option value="Balıkesir">Balıkesir</option>
                                            <option value="Antalya">Antalya</option>
                                            <option value="Adana">Adana</option>
                                            <option value="Konya">Konya</option>
                                            <option value="Gaziantep">Gaziantep</option>
                                            <option value="Kayseri">Kayseri</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="City" class="text-danger small"></span>
                                </div>

                                <!-- Address -->
                                <div class="col-12">
                                    <label asp-for="Address" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt me-2"></i>Adres
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-map-marker-alt text-muted"></i>
                                        </span>
                                        <textarea asp-for="Address" id="addressInput" class="form-control border-start-0" rows="3" placeholder="Tam adresinizi girin"></textarea>
                                    </div>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <!-- Postal Code -->
                                <div class="col-md-6">
                                    <label asp-for="PostalCode" class="form-label fw-bold">
                                        <i class="fas fa-mail-bulk me-2"></i>Posta Kodu
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-mail-bulk text-muted"></i>
                                        </span>
                                        <input asp-for="PostalCode" id="postalCodeInput" class="form-control border-start-0" placeholder="34000" />
                                    </div>
                                    <span asp-validation-for="PostalCode" class="text-danger small"></span>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-bold">
                                        <i class="fas fa-lock me-2"></i>Şifre
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Password" type="password" id="passwordInput" class="form-control" placeholder="En az 6 karakter" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                        <i class="fas fa-lock me-2"></i>Şifre Tekrar
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-lock text-muted"></i>
                                        </span>
                                        <input asp-for="ConfirmPassword" type="password" id="confirmPasswordInput" class="form-control" placeholder="Şifrenizi tekrar girin" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="mb-4 mt-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                    <label class="form-check-label" for="termsCheck">
                                        <a href="@Url.Action("Index", "KVKK")" target="_blank" class="text-primary">Kullanım şartlarını</a> ve 
                                        <a href="@Url.Action("Gizlilik", "KVKK")" target="_blank" class="text-primary">gizlilik politikasını</a> kabul ediyorum
                                    </label>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn" disabled>
                                    <i class="fas fa-user-plus me-2"></i>Üye Ol
                                </button>
                            </div>

                            <!-- Login Link -->
                            <div class="text-center">
                                <p class="text-muted mb-3">Zaten hesabınız var mı?</p>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                                </a>
                            </div>
                        </form>

                        <hr class="my-4">

                        <!-- Social Register -->
                        <div class="text-center">
                            <p class="text-muted mb-3">Veya şununla üye olun:</p>
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-outline-secondary flex-fill" type="button">
                                    <i class="fab fa-google me-2"></i>Google
                                </button>
                                <button class="btn btn-outline-secondary flex-fill" type="button">
                                    <i class="fab fa-facebook-f me-2"></i>Facebook
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Benefits Section -->
                <div class="row mt-4 g-3">
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-gift text-primary mb-3" style="font-size: 2rem;"></i>
                                <h5 class="fw-bold">Özel İndirimler</h5>
                                <p class="text-muted mb-0">Üye olun, özel fırsatlardan yararlanın</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-truck text-primary mb-3" style="font-size: 2rem;"></i>
                                <h5 class="fw-bold">Ücretsiz Kargo</h5>
                                <p class="text-muted mb-0">150₺ üzeri alışverişlerde</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                        <div class="card border-0 bg-light h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-headset text-primary mb-3" style="font-size: 2rem;"></i>
                                <h5 class="fw-bold">7/24 Destek</h5>
                                <p class="text-muted mb-0">Müşteri hizmetleri desteği</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .page-header {
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .register-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .register-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .card {
        border-radius: var(--border-radius-lg);
        overflow: hidden;
    }

    .input-group-text {
        border: 1px solid #dee2e6;
        border-right: none;
    }

    .form-control {
        border: 1px solid #dee2e6;
        padding: 12px 16px;
        border-radius: 0;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25);
    }

    .input-group .form-control:focus {
        border-left-color: #dee2e6;
    }

    .form-select {
        border: 1px solid #dee2e6;
        padding: 12px 16px;
        border-radius: 0;
        transition: all 0.3s ease;
    }

    .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    .btn {
        border-radius: var(--border-radius);
        font-weight: 600;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, #c0392b 100%);
        border: none;
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    }

    .btn-primary:hover:not(:disabled) {
        background: linear-gradient(135deg, #c0392b 0%, var(--primary-color) 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-outline-primary {
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        background: transparent;
    }

    .btn-outline-primary:hover {
        background: var(--primary-color);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.3);
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25);
    }

    .alert {
        border-radius: var(--border-radius);
        border: none;
    }

    .text-danger {
        color: var(--danger-color) !important;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .card-body {
            padding: 2rem !important;
        }
        
        .register-icon {
            width: 60px;
            height: 60px;
        }
        
        .register-icon i {
            font-size: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1.5rem !important;
        }
        
        .btn {
            padding: 10px 20px;
        }
    }
</style>

