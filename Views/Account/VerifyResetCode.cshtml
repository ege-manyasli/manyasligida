@model manyasligida.Models.VerifyResetCodeViewModel

@{
    ViewData["Title"] = "Kod Doğrulama";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Kod Doğrulama
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        E-posta adresinize gönderilen 6 haneli kodu girin.
                    </p>

                    <form asp-action="VerifyResetCode" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                E-posta Adresi
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VerificationCode" class="form-label">
                                <i class="fas fa-key me-1"></i>
                                Doğrulama Kodu
                            </label>
                            <input asp-for="VerificationCode" class="form-control form-control-lg" 
                                   placeholder="123456" maxlength="6" style="text-align: center; font-size: 24px; letter-spacing: 8px;" />
                            <span asp-validation-for="VerificationCode" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>
                                Kodu Doğrula
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-focus on code input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('VerificationCode').focus();
        });
        
        // Auto-format code input
        document.getElementById('VerificationCode').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}
