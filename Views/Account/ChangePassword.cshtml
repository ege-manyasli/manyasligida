@model manyasligida.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştirme";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-lock me-2"></i>
                        Yeni Şifre Belirleme
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Yeni şifrenizi belirleyin. Şifreniz en az 6 karakter uzunluğunda olmalıdır.
                    </p>

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>
                                Yeni Şifre
                            </label>
                            <input asp-for="NewPassword" class="form-control form-control-lg" type="password" 
                                   placeholder="Yeni şifrenizi girin" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>
                                Şifre Tekrar
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" 
                                   placeholder="Şifrenizi tekrar girin" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check me-2"></i>
                                Şifreyi Güncelle
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            Giriş Sayfasına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
