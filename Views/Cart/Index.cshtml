                    // WhatsApp linkini olu≈ütur
                    const phoneNumber = '905437262738'; // Manyaslƒ± Gƒ±da WhatsApp numarasƒ±
                    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
                    
                    // WhatsApp'ƒ± a√ß
                    window.open(whatsappUrl, '_blank');
                },
                error: function() {
                    // Kullanƒ±cƒ± bilgileri alƒ±namazsa basit mesaj g√∂nder
                    const cartItems = [];
                    $('.cart-item').each(function() {
                        const productName = $(this).find('h6').text();
                        const quantity = $(this).find('.quantity-input').val();
                        const unitPrice = $(this).find('.text-primary').text();
                        cartItems.push(`‚Ä¢ ${productName}: ${quantity} adet - ${unitPrice}`);
                    });

                    const totalPrice = $('.fw-bold.fs-5.text-primary').text();
                    const message = `Merhaba! Manyaslƒ± S√ºt √úr√ºnleri'nden sipari≈ü vermek istiyorum.

