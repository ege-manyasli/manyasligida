@model IEnumerable<manyasligida.Models.CartItemViewModel>

@{
    ViewData["Title"] = "Sepetim";
    var cartTotal = ViewBag.CartTotal as decimal? ?? 0;
    var cartItemCount = ViewBag.CartItemCount as int? ?? 0;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Alƒ±≈üveri≈ü Sepetim</h2>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-shopping-cart fa-4x text-muted"></i>
                    </div>
                    <h3 class="mb-3">Sepetiniz Bo≈ü</h3>
                    <p class="text-muted mb-4">Hen√ºz sepetinize √ºr√ºn eklemediniz. Lezzetli peynirlerimizi ke≈üfetmeye ba≈ülayƒ±n!</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Alƒ±≈üveri≈üe Ba≈üla
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    <!-- Cart Items -->
                    <div class="col-lg-8 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-shopping-cart me-2 text-primary"></i>
                                    Sepet √úr√ºnleri (@cartItemCount)
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                @foreach (var item in Model)
                                {
                                    <div class="cart-item p-3 border-bottom" data-product-id="@item.ProductId">
                                        <div class="row align-items-center">
                                            <div class="col-md-2 col-4">
                                                <img src="@item.ProductImage" alt="@item.ProductName" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                            </div>
                                            <div class="col-md-4 col-8">
                                                <h6 class="mb-1 fw-bold">@item.ProductName</h6>
                                                <p class="text-muted mb-1 small">@item.Weight</p>
                                            </div>
                                            <div class="col-md-2 col-4">
                                                <span class="fw-bold text-primary">‚Ç∫@item.UnitPrice.ToString("0.00")</span>
                                            </div>
                                            <div class="col-md-2 col-4">
                                                <div class="input-group input-group-sm">
                                                    <button class="btn btn-outline-secondary quantity-btn" data-action="decrease" data-product-id="@item.ProductId">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" class="form-control text-center quantity-input" value="@item.Quantity" min="1" data-product-id="@item.ProductId">
                                                    <button class="btn btn-outline-secondary quantity-btn" data-action="increase" data-product-id="@item.ProductId">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="col-md-1 col-4">
                                                <span class="fw-bold">‚Ç∫@item.TotalPrice.ToString("0.00")</span>
                                            </div>
                                            <div class="col-md-1 col-4">
                                                <button class="btn btn-sm btn-outline-danger remove-item" data-product-id="@item.ProductId">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">
                                            <i class="fas fa-arrow-left me-2"></i>Alƒ±≈üveri≈üe Devam Et
                                        </a>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <button class="btn btn-outline-danger" id="clearCart">
                                            <i class="fas fa-trash me-2"></i>Sepeti Temizle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cart Summary -->
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-calculator me-2 text-primary"></i>
                                    Sepet √ñzeti
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Ara Toplam:</span>
                                    <span>@cartTotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>KDV (%18):</span>
                                    <span>@((cartTotal * 0.18m).ToString("C", new System.Globalization.CultureInfo("tr-TR")))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Kargo:</span>
                                    <span class="text-success">√úcretsiz</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="fw-bold fs-5">Toplam:</span>
                                    <span class="fw-bold fs-5 text-primary">@((cartTotal * 1.18m).ToString("C", new System.Globalization.CultureInfo("tr-TR")))</span>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary btn-lg">
                                        <i class="fas fa-credit-card me-2"></i>
                                        Sipari≈üi Tamamla
                                    </a>
                                    
                                    <button onclick="checkLoginAndOpenWhatsApp()" class="btn btn-success btn-lg" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="top" 
                                            title="WhatsApp √ºzerinden hƒ±zlƒ± sipari≈ü verin">
                                        <i class="fab fa-whatsapp me-2"></i>
                                        WhatsApp ile Sipari≈ü Ver
                                    </button>
                                    
                                    <button onclick="clearCart()" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-2"></i>
                                        Sepeti Temizle
                                    </button>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        WhatsApp ile sipari≈ü verirken sepetinizdeki t√ºm √ºr√ºnler otomatik olarak mesaja dahil edilir.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .cart-item {
        transition: all 0.3s ease;
    }

    .cart-item:hover {
        background-color: #f8f9fa;
    }

    .quantity-control .input-group {
        max-width: 120px;
    }

    .quantity-control .form-control {
        text-align: center;
        border-left: none;
        border-right: none;
    }

    .quantity-control .btn {
        border-radius: 0;
    }

    .quantity-control .btn:first-child {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    .quantity-control .btn:last-child {
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    /* WhatsApp buton tooltip stilleri */
    .tooltip {
        font-size: 14px;
        font-weight: 500;
    }

    .tooltip-inner {
        background-color: #25D366;
        color: white;
        border-radius: 8px;
        padding: 8px 12px;
        box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
        max-width: 250px;
    }

    .tooltip.bs-tooltip-top .tooltip-arrow::before {
        border-top-color: #25D366;
    }

    .tooltip.bs-tooltip-bottom .tooltip-arrow::before {
        border-bottom-color: #25D366;
    }

    .tooltip.bs-tooltip-start .tooltip-arrow::before {
        border-left-color: #25D366;
    }

    .tooltip.bs-tooltip-end .tooltip-arrow::before {
        border-right-color: #25D366;
    }

    /* WhatsApp buton hover efekti */
    .btn-success:hover {
        background-color: #128C7E;
        border-color: #128C7E;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
        transition: all 0.3s ease;
    }
</style>

<script>
    $(document).ready(function() {
        // Tooltip'leri aktif hale getir
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Quantity controls
        $('.quantity-btn').click(function() {
            const action = $(this).data('action');
            const productId = $(this).data('product-id');
            const input = $(`.quantity-input[data-product-id="${productId}"]`);
            let quantity = parseInt(input.val());

            if (action === 'increase') {
                quantity++;
            } else if (action === 'decrease' && quantity > 1) {
                quantity--;
            }

            input.val(quantity);
            updateCartItem(productId, quantity);
        });

        // Quantity input change
        $('.quantity-input').change(function() {
            const productId = $(this).data('product-id');
            const quantity = parseInt($(this).val());
            
            if (quantity < 1) {
                $(this).val(1);
                updateCartItem(productId, 1);
            } else {
                updateCartItem(productId, quantity);
            }
        });

        // Remove item
        $('.remove-item').click(function() {
            const productId = $(this).data('product-id');
            const cartItem = $(this).closest('.cart-item');
            
            cartItem.fadeOut(300, function() {
                removeFromCart(productId);
            });
        });

        // Clear cart
        $('#clearCart').click(function() {
            if (confirm('Sepetinizi temizlemek istediƒüinizden emin misiniz?')) {
                clearCart();
            }
        });

        // Functions
        function updateCartItem(productId, quantity) {
            $.post('/Cart/UpdateQuantity', { productId: productId, quantity: quantity })
                .done(function(response) {
                    if (response.success) {
                        updateCartDisplay(response);
                        updateItemTotal(productId, quantity);
                    } else {
                        showToast(response.message, 'error');
                    }
                })
                .fail(function() {
                    showToast('Bir hata olu≈ütu', 'error');
                });
        }

        function removeFromCart(productId) {
            $.post('/Cart/RemoveFromCart', { productId: productId })
                .done(function(response) {
                    if (response.success) {
                        updateCartDisplay(response);
                        if (response.cartItemCount === 0) {
                            location.reload();
                        }
                    }
                })
                .fail(function() {
                    showToast('Bir hata olu≈ütu', 'error');
                });
        }

        function clearCart() {
            $.post('/Cart/ClearCart')
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    }
                })
                .fail(function() {
                    showToast('Bir hata olu≈ütu', 'error');
                });
        }

        function updateCartDisplay(response) {
            // Update cart count in header if exists
            $('.cart-count').text(response.cartItemCount);
            
            // Update totals
            $('.cart-total').text('‚Ç∫' + response.cartTotal.toFixed(2));
        }

        function updateItemTotal(productId, quantity) {
            const cartItem = $(`.cart-item[data-product-id="${productId}"]`);
            const unitPrice = parseFloat(cartItem.find('.text-primary').text().replace('‚Ç∫', ''));
            const total = unitPrice * quantity;
            cartItem.find('.fw-bold:last').text('‚Ç∫' + total.toFixed(2));
        }

        function checkLoginAndOpenWhatsApp() {
            // AJAX ile server-side giri≈ü kontrol√º
            $.ajax({
                url: '@Url.Action("CheckLoginStatus", "Account")',
                type: 'GET',
                success: function(response) {
                    if (response.isLoggedIn) {
                        console.log('Kullanƒ±cƒ± giri≈ü yapmƒ±≈ü, WhatsApp a√ßƒ±lƒ±yor...');
                        openWhatsApp();
                    } else {
                        console.log('Kullanƒ±cƒ± giri≈ü yapmamƒ±≈ü, login sayfasƒ±na y√∂nlendiriliyor...');
                        showToast('WhatsApp sipari≈üi i√ßin √∂nce giri≈ü yapmalƒ±sƒ±nƒ±z.', 'warning');
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Login", "Account")';
                        }, 2000);
                    }
                },
                error: function() {
                    console.log('Giri≈ü kontrol√º ba≈üarƒ±sƒ±z, login sayfasƒ±na y√∂nlendiriliyor...');
                    showToast('WhatsApp sipari≈üi i√ßin √∂nce giri≈ü yapmalƒ±sƒ±nƒ±z.', 'warning');
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Login", "Account")';
                    }, 2000);
                }
            });
        }

