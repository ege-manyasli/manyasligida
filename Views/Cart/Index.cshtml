                message += `• Kredi Kartı (Kapıda)\n`;
                message += `• Nakit (Kapıda)\n`;
                message += `• Havale/EFT (Ön Ödeme)\n\n`;
                
                message += `💬 *MESAJIM:*\n`;
                message += `Bu siparişimi tamamlamak istiyorum. Yukarıdaki adres bilgilerime teslimat yapabilir misiniz?\n\n`;
                message += `❓ *SORULARIM:*\n`;
                message += `• Ödeme bilgilerini nasıl paylaşabilirim?\n`;
                message += `• Teslimat sırasında özel bir talep var mı?\n`;
                message += `• Ürünlerin tazeliği garanti ediliyor mu?\n\n`;
                message += `━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
                message += `🏪 *Manyaslı Süt Ürünleri*\n`;
                message += `📍 Hal Cd. 13-9, 17 Eylül, 10200 Bandırma/Balıkesir\n`;
                message += `📞 0535 633 54 77 - 0544 920 26 25\n`;
                message += `🕒 Pzt-Cmt: 08:00-18:00\n`;
                message += `🌐 manyasligida.com`;
            }
            
            return message;
        }

        function determineWhatsAppNumber(cartItems) {
            // WhatsApp numaraları
            const CEMAL_NUMBER = "905449202625"; // Cemal Manyaslı
            const MUSTAFA_NUMBER = "905356335477"; // Mustafa Manyaslı
            
            if (cartItems.length === 0) {
                return CEMAL_NUMBER; // Varsayılan olarak Cemal'e yönlendir
            }
            
            // Sepetteki ürünleri analiz et
            let hasDairyProducts = false;
            let hasCheeseProducts = false;
            
            cartItems.forEach(item => {
                const productName = item.productName.toLowerCase();
                
                // Süt ürünleri kategorisi
                if (productName.includes('süt') || productName.includes('yoğurt') || 
                    productName.includes('ayran') || productName.includes('kaymak')) {
                    hasDairyProducts = true;
                }
                
                // Peynir ürünleri kategorisi
                if (productName.includes('peynir') || productName.includes('kaşar') || 
                    productName.includes('beyaz') || productName.includes('tulum') ||
                    productName.includes('lor') || productName.includes('çökelek')) {
                    hasCheeseProducts = true;
                }
            });
            
            // Yönlendirme mantığı
            if (hasCheeseProducts && !hasDairyProducts) {
                return MUSTAFA_NUMBER; // Sadece peynir ürünleri varsa Mustafa'ya
            } else if (hasDairyProducts && !hasCheeseProducts) {
                return CEMAL_NUMBER; // Sadece süt ürünleri varsa Cemal'e
            } else if (hasCheeseProducts && hasDairyProducts) {
                return CEMAL_NUMBER; // Her ikisi de varsa Cemal'e (ana sorumlu)
            } else {
                return CEMAL_NUMBER; // Varsayılan olarak Cemal'e
            }
        }

        function showToast(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : type === 'warning' ? 'warning' : 'danger'} position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
    });
</script> 