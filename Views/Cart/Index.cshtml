            message += `• Ad Soyad: ${userInfo.firstName || 'Belirtilmemiş'} ${userInfo.lastName || 'Belirtilmemiş'}\n`;
            message += `• E-posta: ${userInfo.email || 'Belirtilmemiş'}\n`;
