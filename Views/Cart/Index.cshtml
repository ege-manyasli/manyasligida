                message += `Hangi ürünleri sipariş etmek istediğinizi söyleyebilir misiniz?\n`;
                message += `Mevcut ürünlerimiz: Peynir çeşitleri, süt, yoğurt, ayran, kaymak vb.\n\n`;
                message += `💰 *ÖDEME BİLGİLERİ:*\n`;
                message += `Ödeme bilgilerini de paylaşabilir misiniz?\n\n`;
                message += `📞 *İLETİŞİM:*\n`;
                message += `Sipariş ile ilgili sorularınız için bu numaradan ulaşabilirsiniz.\n\n`;
                message += `━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
                message += `🏪 *Manyaslı Süt Ürünleri*\n`;
                message += `📍 Hal Cd. 13-9, 17 Eylül, 10200 Bandırma/Balıkesir\n`;
                message += `📞 0535 633 54 77 - 0544 920 26 25\n`;
                message += `🕒 Pzt-Cmt: 08:00-18:00`;
            } else {
                message += `🛒 *SİPARİŞ DETAYLARI*\n`;
                message += `━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
                message += `Merhaba ${userInfo.firstName || 'Değerli'} Bey/Hanım,\n\n`;
                message += `Manyaslı Süt Ürünleri'nden sipariş vermek istiyorum.\n\n`;
                message += `📦 *SEPETİMDEKİ ÜRÜNLER:*\n`;
                message += `━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\n`;
                
                let total = 0;
                let itemCount = 0;
                cartItems.forEach((item, index) => {
                    itemCount++;
                    const weight = item.weight ? ` (${item.weight})` : '';
                    const itemTotal = item.totalPrice.toFixed(2);
                    message += `${itemCount}. ${item.productName}${weight}\n`;
                    message += `   📊 Miktar: ${item.quantity} adet\n`;
                    message += `   💰 Birim Fiyat: ${item.unitPrice.toFixed(2)} TL\n`;
