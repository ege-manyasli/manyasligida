@{
    var title = ViewData["Title"] ?? "Admin Panel";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body { background: #f8f9fa; }
        .admin-navbar {
            background: #23272b;
            color: #fff;
            border-radius: 0 0 1.5rem 1.5rem;
            box-shadow: 0 2px 16px rgba(0,0,0,0.04);
        }
        .admin-navbar .navbar-brand {
            color: #fff;
            font-weight: 600;
            letter-spacing: 1px;
        }
        .admin-navbar .nav-link, .admin-navbar .btn {
            color: #fff;
        }
        .admin-navbar .nav-link:hover, .admin-navbar .btn:hover {
            color: #0d6efd;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg admin-navbar mb-4">
        <div class="container">
            <a class="navbar-brand" href="/Admin">Admin Panel</a>
            <div class="d-flex gap-2 ms-auto">
                <a href="/" class="btn btn-outline-light btn-sm rounded-pill">Siteye Dön</a>
                <a href="/Admin/Logout" class="btn btn-outline-danger btn-sm rounded-pill">Çıkış Yap</a>
            </div>
        </div>
    </nav>
    <main class="container-fluid px-0">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html> 