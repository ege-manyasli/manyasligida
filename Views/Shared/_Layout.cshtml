            }

            // Scroll to top button visibility
            if ($(window).scrollTop() > 300) {
                $('#scrollToTop').addClass('show');
            } else {
                $('#scrollToTop').removeClass('show');
            }
        });

        // Scroll to top functionality
        $('#scrollToTop').on('click', function() {
            $('html, body').animate({
                scrollTop: 0
            }, 800, 'easeInOutQuart');
        });

        // Enhanced Toast notification function
        function showToast(message, type = 'info') {
            const toast = $(`
                <div class="toast" role="alert">
                    <div class="toast-header">
                        <i class="fas fa-${type === 'success' ? 'check-circle text-success' : type === 'error' ? 'exclamation-circle text-danger' : 'info-circle text-info'} me-2"></i>
                        <strong class="me-auto">Bildirim</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `);

            $('.toast-container').append(toast);
            const bsToast = new bootstrap.Toast(toast[0]);
            bsToast.show();

            toast.on('hidden.bs.toast', function() {
                $(this).remove();
            });
        }

        // Cart count update function
        function updateCartCount() {
            $.get('/Cart/GetCartCount')
                .done(function(response) {
                    $('.cart-count').text(response.cartItemCount);
                });
        }

        // Enhanced Add to cart function with animation
        function addToCart(productId, quantity = 1) {
            const btn = $('[data-product-id="' + productId + '"]');
            const originalText = btn.html();

            btn.prop('disabled', true).html('<span class="loading"></span>');

            // Create cart animation
            const productCard = btn.closest('.product-card');
            if (productCard.length) {
                const productImg = productCard.find('.card-img-top');
                const cartIcon = $('.cart-link');

                const animation = $('<div class="cart-animation"></div>');
                animation.css({
                    position: 'fixed',
                    top: productImg.offset().top + productImg.height() / 2,
                    left: productImg.offset().left + productImg.width() / 2,
                    width: '50px',
                    height: '50px',
                    background: 'var(--primary-color)',
                    borderRadius: '50%',
                    zIndex: 9999,
                    pointerEvents: 'none'
                });

                $('body').append(animation);

                setTimeout(() => {
                    animation.remove();
                }, 1000);
            }

            $.post('/Cart/AddToCart', { productId: productId, quantity: quantity })
                .done(function(response) {
                    if (response.success) {
                        updateCartCount();
                        showToast(response.message, 'success');

                        // Add success animation to cart icon
                        $('.cart-link').addClass('pulse');
                        setTimeout(() => {
                            $('.cart-link').removeClass('pulse');
                        }, 500);
                    } else {
                        showToast(response.message, 'error');
                    }
                })
                .fail(function() {
                    showToast('Bir hata oluştu', 'error');
                })
                .always(function() {
                    btn.prop('disabled', false).html(originalText);
                });
        }

        // Newsletter subscription
        $('.newsletter-form').on('submit', function(e) {
            e.preventDefault();
            const email = $(this).find('input[type="email"]').val();

            if (email) {
                showToast('E-bülten aboneliğiniz başarıyla alındı!', 'success');
                $(this).find('input[type="email"]').val('');
            }
        });

        // Mobile menu functionality
        $(document).ready(function() {
            // Mobile menu toggle
            $('.navbar-toggler').on('click', function() {
                $('.navbar-collapse').toggleClass('show');
            });

            // Close mobile menu when clicking on a link
            $('.navbar-nav .nav-link').on('click', function() {
                $('.navbar-collapse').removeClass('show');
            });

            // Close mobile menu when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.navbar').length) {
                    $('.navbar-collapse').removeClass('show');
                }
            });

            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 100
                    }, 800, 'easeInOutQuart');
                }
            });
        });

        // Show TempData messages
        @if (TempData["Success"] != null)
        {
                    <text>showToast('@Html.Raw(TempData["Success"])', 'success');</text>
        }
        @if (TempData["Error"] != null)
        {
                    <text>showToast('@Html.Raw(TempData["Error"])', 'error');</text>
        }
        @if (TempData["Info"] != null)
        {
                    <text>showToast('@Html.Raw(TempData["Info"])', 'info');</text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
