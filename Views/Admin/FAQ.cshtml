@model IEnumerable<manyasligida.Models.FAQ>
@{
    ViewData["Title"] = "SSS Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">SSS Yönetimi</h1>
                <p class="page-subtitle">Sıkça sorulan soruları yönetin</p>
            </div>
            <a href="@Url.Action("AddFAQ", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Yeni SSS
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Sıkça Sorulan Sorular</h5>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (Model != null && Model.Any())
            {
                <div class="accordion" id="faqAccordion">
                    @foreach (var faq in Model)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq-@faq.Id">
                                <button class="accordion-button @(faq.Id == Model.First().Id ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@faq.Id" aria-expanded="@(faq.Id == Model.First().Id ? "true" : "false")" aria-controls="collapse-@faq.Id">
                                    <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                        <span class="fw-medium">@faq.Question</span>
                                        <div class="btn-group btn-group-sm" onclick="event.stopPropagation();">
                                            <a href="@Url.Action("EditFAQ", "Admin", new { id = faq.Id })" class="btn btn-outline-primary btn-sm" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" title="Sil" onclick="deleteFAQ(@faq.Id, '@faq.Question')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse-@faq.Id" class="accordion-collapse collapse @(faq.Id == Model.First().Id ? "show" : "")" aria-labelledby="faq-@faq.Id" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    <div class="mb-3">
                                        @Html.Raw(faq.Answer.Replace("\n", "<br>"))
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-muted small">
                                            <i class="fas fa-sort me-1"></i>Sıra: @faq.DisplayOrder
                                            <span class="mx-2">|</span>
                                            <i class="fas fa-circle me-1 @(faq.IsActive ? "text-success" : "text-danger")"></i>
                                            @(faq.IsActive ? "Aktif" : "Pasif")
                                            @if (!string.IsNullOrEmpty(faq.Category))
                                            {
                                                <span class="mx-2">|</span>
                                                <i class="fas fa-tag me-1"></i>@faq.Category
                                            }
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @faq.CreatedAt.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz SSS bulunmuyor</h5>
                    <p class="text-muted">İlk SSS öğenizi eklemek için yukarıdaki butonu kullanın.</p>
                    <a href="@Url.Action("AddFAQ", "Admin")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>İlk SSS'yi Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Silme Formu -->
<form id="deleteFAQForm" asp-action="DeleteFAQ" method="post" style="display: none;">
    <input type="hidden" name="id" id="deleteFAQId" />
</form>

<script>
function deleteFAQ(id, question) {
    if (confirm(`"${question}" sorusunu silmek istediğinizden emin misiniz?`)) {
        document.getElementById('deleteFAQId').value = id;
        document.getElementById('deleteFAQForm').submit();
    }
}
</script> 