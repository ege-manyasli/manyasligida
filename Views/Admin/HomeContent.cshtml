@model manyasligida.Models.DTOs.HomeContentResponse
@{
    ViewData["Title"] = "Anasayfa İçerik Yönetimi";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Anasayfa İçerik Yönetimi</h1>
            <p class="page-subtitle">Web sitesi anasayfasının tüm içeriklerini düzenleyin</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-home me-2"></i>Anasayfa İçeriği</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditHomeContent" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <!-- Hero Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-star me-2 text-warning"></i>Hero Bölümü (Ana Banner)
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ana Başlık</label>
                        <input asp-for="HeroTitle" class="form-control" placeholder="Ana başlık">
                        <span asp-validation-for="HeroTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Alt Başlık</label>
                        <input asp-for="HeroSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="HeroSubtitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Açıklama</label>
                        <textarea asp-for="HeroDescription" class="form-control" rows="3" placeholder="Açıklama"></textarea>
                        <span asp-validation-for="HeroDescription" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ana Buton Metni</label>
                        <input asp-for="HeroButtonText" class="form-control" placeholder="Buton metni">
                        <span asp-validation-for="HeroButtonText" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ana Buton URL</label>
                        <input asp-for="HeroButtonUrl" class="form-control" placeholder="/Products">
                        <span asp-validation-for="HeroButtonUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">İkinci Buton Metni</label>
                        <input asp-for="HeroSecondButtonText" class="form-control" placeholder="İkinci buton metni">
                        <span asp-validation-for="HeroSecondButtonText" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hero Video</label>
                        <input type="file" name="heroVideoFile" class="form-control" accept="video/*">
                        @if (!string.IsNullOrEmpty(Model.HeroVideoUrl))
                        {
                            <div class="mt-2">
                                <video controls style="max-width: 200px;">
                                    <source src="@Model.HeroVideoUrl" type="video/mp4">
                                </video>
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hero Resim</label>
                        <input type="file" name="heroImageFile" class="form-control" accept="image/*">
                        @if (!string.IsNullOrEmpty(Model.HeroImageUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.HeroImageUrl" alt="Hero" class="img-thumbnail" style="max-width: 200px;">
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Arkaplan Rengi</label>
                        <input asp-for="HeroBackgroundColor" class="form-control" placeholder="linear-gradient(135deg, #8b4513 0%, #d2691e 100%)">
                        <span asp-validation-for="HeroBackgroundColor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-star me-2 text-success"></i>Özellikler Bölümü
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Özellikler Başlık</label>
                        <input asp-for="FeaturesTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="FeaturesTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Özellikler Alt Başlık</label>
                        <input asp-for="FeaturesSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="FeaturesSubtitle" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Products Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-shopping-cart me-2 text-primary"></i>Ürünler Bölümü
                    </h4>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ürünler Başlık</label>
                        <input asp-for="ProductsTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="ProductsTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ürünler Alt Başlık</label>
                        <input asp-for="ProductsSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="ProductsSubtitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Maksimum Ürün Sayısı</label>
                        <input asp-for="MaxProductsToShow" class="form-control" type="number" min="1" max="20">
                        <span asp-validation-for="MaxProductsToShow" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="ShowPopularProducts" class="form-check-input" type="checkbox">
                            <label asp-for="ShowPopularProducts" class="form-check-label fw-bold">
                                Popüler Ürünler Bölümünü Göster
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-bar me-2 text-warning"></i>İstatistikler Bölümü
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İstatistikler Başlık</label>
                        <input asp-for="StatsTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="StatsTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İstatistikler Alt Başlık</label>
                        <input asp-for="StatsSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="StatsSubtitle" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Blog Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-blog me-2 text-info"></i>Blog Bölümü
                    </h4>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Blog Başlık</label>
                        <input asp-for="BlogTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="BlogTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Blog Alt Başlık</label>
                        <input asp-for="BlogSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="BlogSubtitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Maksimum Blog Sayısı</label>
                        <input asp-for="MaxBlogsToShow" class="form-control" type="number" min="1" max="10">
                        <span asp-validation-for="MaxBlogsToShow" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="ShowLatestBlogs" class="form-check-input" type="checkbox">
                            <label asp-for="ShowLatestBlogs" class="form-check-label fw-bold">
                                Son Blog Yazıları Bölümünü Göster
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Newsletter Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-envelope me-2 text-primary"></i>Newsletter Bölümü
                    </h4>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Newsletter Başlık</label>
                        <input asp-for="NewsletterTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="NewsletterTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Newsletter Açıklama</label>
                        <textarea asp-for="NewsletterDescription" class="form-control" rows="2" placeholder="Açıklama"></textarea>
                        <span asp-validation-for="NewsletterDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Newsletter Buton Metni</label>
                        <input asp-for="NewsletterButtonText" class="form-control" placeholder="Buton metni">
                        <span asp-validation-for="NewsletterButtonText" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Contact Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-phone me-2 text-primary"></i>İletişim Bölümü
                    </h4>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İletişim Başlık</label>
                        <input asp-for="ContactTitle" class="form-control" placeholder="Başlık">
                        <span asp-validation-for="ContactTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İletişim Alt Başlık</label>
                        <input asp-for="ContactSubtitle" class="form-control" placeholder="Alt başlık">
                        <span asp-validation-for="ContactSubtitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Telefon</label>
                        <input asp-for="ContactPhone" class="form-control" placeholder="+90 266 123 45 67">
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">E-posta</label>
                        <input asp-for="ContactEmail" class="form-control" placeholder="info@manyasligida.com">
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Adres</label>
                        <textarea asp-for="ContactAddress" class="form-control" rows="2" placeholder="Adres"></textarea>
                        <span asp-validation-for="ContactAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İletişim Açıklama</label>
                        <textarea asp-for="ContactDescription" class="form-control" rows="3" placeholder="Açıklama"></textarea>
                        <span asp-validation-for="ContactDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Color Settings -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-palette me-2 text-warning"></i>Renk Ayarları
                    </h4>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ana Renk</label>
                        <input asp-for="PrimaryColor" class="form-control" type="color">
                        <span asp-validation-for="PrimaryColor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İkincil Renk</label>
                        <input asp-for="SecondaryColor" class="form-control" type="color">
                        <span asp-validation-for="SecondaryColor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
                <form asp-action="ResetHomeContent" method="post" style="display: inline;" onsubmit="return confirm('Anasayfa içeriğini varsayılan değerlere sıfırlamak istediğinizden emin misiniz? Bu işlem geri alınamaz.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-undo me-2"></i>Sıfırla
                    </button>
                </form>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        $(document).ready(function() {
            $('form').on('submit', function() {
                var isValid = true;
                
                // Check required fields
                $('input[required], textarea[required]').each(function() {
                    if (!$(this).val()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (!isValid) {
                    alert('Lütfen tüm zorunlu alanları doldurun.');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
