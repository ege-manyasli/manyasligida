@model manyasligida.Models.Video
@{
    ViewData["Title"] = "Video Düzenle";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Video Düzenle</h1>
            <p class="page-subtitle">@Model.Title</p>
        </div>
        <a href="@Url.Action("Videos", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
</div>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <strong>Hata!</strong> Lütfen aşağıdaki hataları düzeltin:
        <ul class="mb-0 mt-2">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="EditVideo" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input asp-for="CreatedAt" type="hidden" />
    <input asp-for="ViewCount" type="hidden" />
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-video me-2"></i>Video Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Title" class="form-label">Video Başlığı <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="Video başlığını girin">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12 mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Video açıklamasını girin (isteğe bağlı)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12 mb-3">
                            <label asp-for="VideoUrl" class="form-label">Video URL <span class="text-danger">*</span></label>
                            <input asp-for="VideoUrl" class="form-control" placeholder="YouTube embed URL'sini girin">
                            <div class="form-text">Örnek: https://www.youtube.com/embed/VIDEO_ID</div>
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12 mb-3">
                            <label asp-for="ThumbnailUrl" class="form-label">Thumbnail URL</label>
                            <input asp-for="ThumbnailUrl" class="form-control" placeholder="Video önizleme resmi URL'si (isteğe bağlı)">
                            <span asp-validation-for="ThumbnailUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Duration" class="form-label">Süre (Saniye)</label>
                            <input asp-for="Duration" type="number" class="form-control" placeholder="0" min="0">
                            <div class="form-text">Video süresi saniye cinsinden</div>
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="DisplayOrder" class="form-label">Sıralama</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="0" min="0">
                            <div class="form-text">Gösterim sırası (0 = en üstte)</div>
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Ayarlar</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox">
                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        <div class="form-text">Video yayında mı?</div>
                    </div>
                    
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsFeatured" class="form-check-input" type="checkbox">
                        <label asp-for="IsFeatured" class="form-check-label">Öne Çıkarılmış</label>
                        <div class="form-text">Anasayfada öne çıkarılsın mı?</div>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i>Önizleme</h5>
                </div>
                <div class="card-body">
                    <div id="videoPreview" class="text-center text-muted">
                        @if (!string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <iframe src="@Model.VideoUrl" width="100%" height="150" frameborder="0" allowfullscreen></iframe>
                        }
                        else
                        {
                            <i class="fas fa-video fa-2x mb-2"></i>
                            <p>Video URL'si girildiğinde önizleme görünecek</p>
                        }
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>İstatistikler</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="stat-box">
                                <h4 class="text-primary">@Model.ViewCount.ToString("N0")</h4>
                                <small class="text-muted">Görüntülenme</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box">
                                @if (Model.Duration > 0)
                                {
                                    var minutes = Model.Duration / 60;
                                    var seconds = Model.Duration % 60;
                                    <h4 class="text-info">@minutes:@seconds.ToString("00")</h4>
                                }
                                else
                                {
                                    <h4 class="text-muted">-:-</h4>
                                }
                                <small class="text-muted">Süre</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Videos", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                </button>
            </div>
        </div>
    </div>
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const videoUrlInput = document.querySelector('#VideoUrl');
    const previewDiv = document.querySelector('#videoPreview');
    
    videoUrlInput.addEventListener('input', function() {
        const url = this.value.trim();
        if (url && url.includes('youtube.com/embed/')) {
            previewDiv.innerHTML = `
                <iframe src="${url}" width="100%" height="150" frameborder="0" allowfullscreen></iframe>
            `;
        } else {
            previewDiv.innerHTML = `
                <i class="fas fa-video fa-2x mb-2"></i>
                <p>Video URL'si girildiğinde önizleme görünecek</p>
            `;
        }
    });
});
</script>

<style>
.stat-box {
    padding: 1rem;
    border-radius: 0.5rem;
    background-color: #f8f9fa;
    margin-bottom: 0.5rem;
}
</style>