@{
    ViewData["Title"] = "Video Ekle";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Video Ekle</h1>
            <p class="page-subtitle">Yeni video ekleyin</p>
        </div>
        <a href="@Url.Action("Videos", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Yeni Video</h5>
    </div>
    <div class="card-body">
        <div class="text-center py-5">
            <i class="fas fa-video fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Video yönetimi yakında eklenecek</h5>
            <p class="text-muted">Video yönetimi özelliği geliştirme aşamasındadır.</p>
            <a href="@Url.Action("Videos", "Admin")" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div> 