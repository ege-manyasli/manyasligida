@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Blog Ekle";
}
<div class="container py-4">
    <h2>Blog Ekle</h2>
    <form>
        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input type="text" class="form-control" placeholder="Blog başlığı" />
        </div>
        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea class="form-control" rows="5" placeholder="Blog içeriği"></textarea>
        </div>
        <button class="btn btn-primary rounded-pill">Kaydet</button>
        <a href="/Admin/Blog" class="btn btn-outline-secondary rounded-pill ms-2">İptal</a>
    </form>
</div> 