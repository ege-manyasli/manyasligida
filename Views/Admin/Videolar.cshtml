@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Video Yönetimi";
    var videolar = new[] {
        new { Id = 1, Ad = "Tanıtım Videosu", Url = "video/9586240-uhd_4096_2160_25fps.mp4" }
    };
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Videolar</h2>
        <a href="/Admin/VideoEkle" class="btn btn-primary btn-sm rounded-pill">+ Video Ekle</a>
    </div>
    <div class="row g-3">
        @foreach (var v in videolar)
        {
            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <video src="/@v.Url" controls style="width:100%;height:180px;object-fit:cover;"></video>
                    <div class="card-body p-2 text-center">
                        <span>@v.Ad</span>
                        <a href="/Admin/VideoSil/@v.Id" class="btn btn-outline-danger btn-sm ms-2">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 