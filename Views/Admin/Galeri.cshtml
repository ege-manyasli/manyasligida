@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Galeri Yönetimi";
    var fotolar = new[] {
        new { Id = 1, Url = "img/product-1.jpg" },
        new { Id = 2, Url = "img/product-2.jpg" }
    };
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Galeri</h2>
        <a href="/Admin/GaleriEkle" class="btn btn-primary btn-sm rounded-pill">+ Fotoğraf Ekle</a>
    </div>
    <div class="row g-3">
        @foreach (var f in fotolar)
        {
            <div class="col-6 col-md-3">
                <div class="card shadow-sm">
                    <img src="/@f.Url" class="card-img-top" style="height:140px;object-fit:cover;" />
                    <div class="card-body p-2 text-center">
                        <a href="/Admin/GaleriSil/@f.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 