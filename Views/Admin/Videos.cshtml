@{
    ViewData["Title"] = "Video Yönetimi";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Video Yönetimi</h1>
            <p class="page-subtitle">Videoları yönetin</p>
        </div>
        <a href="@Url.Action("AddVideo", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Video
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-video me-2"></i>Videolar</h5>
    </div>
    <div class="card-body">
        <div class="text-center py-5">
            <i class="fas fa-video fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Video yönetimi yakında eklenecek</h5>
            <p class="text-muted">Video yönetimi özelliği geliştirme aşamasındadır.</p>
        </div>
    </div>
</div> 