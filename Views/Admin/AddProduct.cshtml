@model manyasligida.Models.Product
@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Ürün Ekle</h1>
            <p class="page-subtitle">Yeni ürün bilgilerini girin</p>
        </div>
        <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Yeni Ürün Ekle</h5>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            </div>
        }
        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Lütfen aşağıdaki hataları düzeltin:</h6>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Ürün Adı *</label>
                        <input asp-for="Name" class="form-control" placeholder="Ürün adı" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün açıklaması"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Fiyat (₺) *</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" required>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="OldPrice" class="form-label">Eski Fiyat (₺)</label>
                                <input asp-for="OldPrice" class="form-control" type="number" step="0.01" placeholder="0.00">
                                <span asp-validation-for="OldPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label">Stok Miktarı *</label>
                                <input asp-for="StockQuantity" class="form-control" type="number" placeholder="0" required>
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Kategori *</label>
                                <select asp-for="CategoryId" class="form-control">
                                    <option value="">Kategori Seçin</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                                @if (ViewBag.Categories == null || ((IEnumerable<manyasligida.Models.Category>)ViewBag.Categories).Count() == 0)
                                {
                                    <div class="alert alert-warning mt-2">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Henüz kategori bulunmuyor. Lütfen önce kategori ekleyin.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Weight" class="form-label">Ağırlık</label>
                                <input asp-for="Weight" class="form-control" placeholder="500 Gr">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FatContent" class="form-label">Yağ Oranı</label>
                                <input asp-for="FatContent" class="form-control" placeholder="%45-50">
                                <span asp-validation-for="FatContent" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Ingredients" class="form-label">İçindekiler</label>
                        <textarea asp-for="Ingredients" class="form-control" rows="2" placeholder="Ürün içindekileri"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Ürün Resmi</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*">
                        <div class="form-text">Sadece JPG, PNG, GIF ve WEBP dosyaları kabul edilir. Maksimum dosya boyutu: 5MB</div>
                    </div>

                    <div id="imagePreview" class="mb-3 d-none">
                        <img id="previewImg" src="" alt="Önizleme" class="img-fluid rounded" style="max-height: 200px;">
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsPopular" class="form-check-input" type="checkbox">
                            <label asp-for="IsPopular" class="form-check-label">Popüler Ürün</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsNew" class="form-check-input" type="checkbox">
                            <label asp-for="IsNew" class="form-check-label">Yeni Ürün</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsFeatured" class="form-check-input" type="checkbox">
                            <label asp-for="IsFeatured" class="form-check-label">Öne Çıkan Ürün</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SortOrder" class="form-label">Sıralama</label>
                        <input asp-for="SortOrder" class="form-control" type="number" placeholder="0">
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Ürün Ekle
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Resim önizleme fonksiyonu
    document.getElementById('imageFile').addEventListener('change', function(e) {
        const file = e.target.files[0];
        const preview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');
        
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                preview.classList.remove('d-none');
            }
            reader.readAsDataURL(file);
        } else {
            preview.classList.add('d-none');
        }
    });
</script> 