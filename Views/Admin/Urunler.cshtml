@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Ürün Yönetimi";
    // Dummy ürün listesi
    var urunler = new[] {
        new { Id = 1, Ad = "Ezine Peyniri", Fiyat = 450, Resim = "img/ezine-tipi-sert-beyaz-peynir-650-gr.-52d9.jpg" },
        new { Id = 2, Ad = "Mihaliç Kelle", Fiyat = 250, Resim = "img/mihalic-peyniri-350-gr.-122f.jpg" }
    };
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Ürünler</h2>
        <a href="/Admin/UrunEkle" class="btn btn-primary btn-sm rounded-pill">+ Ürün Ekle</a>
    </div>
    <table class="table table-bordered bg-white shadow-sm">
        <thead>
            <tr><th>Resim</th><th>Ad</th><th>Fiyat</th><th>İşlemler</th></tr>
        </thead>
        <tbody>
        @foreach (var u in urunler)
        {
            <tr>
                <td><img src="/@u.Resim" style="height:48px;object-fit:cover;" /></td>
                <td>@u.Ad</td>
                <td>@u.Fiyat ₺</td>
                <td>
                    <a href="/Admin/UrunGuncelle/@u.Id" class="btn btn-outline-info btn-sm">Düzenle</a>
                    <a href="/Admin/UrunSil/@u.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 