@model manyasligida.Models.DTOs.AboutContentResponse
@{
    ViewData["Title"] = "Hakkımızda İçerik Yönetimi";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Hakkımızda İçerik Yönetimi</h1>
            <p class="page-subtitle">Hakkımızda sayfası içeriğini düzenleyin</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Hakkımızda İçeriği</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditAboutContent" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-heading me-2 text-primary"></i>Sayfa Başlığı
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ana Başlık</label>
                        <input asp-for="Title" class="form-control" placeholder="Hakkımızda">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Alt Başlık</label>
                        <input asp-for="Subtitle" class="form-control" placeholder="Gelenekten geleceğe kaliteli lezzetlerin hikayesi">
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Story Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-book me-2 text-success"></i>Hikayemiz Bölümü
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hikaye Başlık</label>
                        <input asp-for="StoryTitle" class="form-control" placeholder="Hikayemiz">
                        <span asp-validation-for="StoryTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hikaye Alt Başlık</label>
                        <input asp-for="StorySubtitle" class="form-control" placeholder="40 Yıllık Deneyim">
                        <span asp-validation-for="StorySubtitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hikaye İçeriği</label>
                        <textarea asp-for="StoryContent" class="form-control" rows="6" placeholder="Hikaye içeriği..."></textarea>
                        <span asp-validation-for="StoryContent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Hikaye Resmi</label>
                        <input type="file" name="storyImageFile" class="form-control" accept="image/*">
                        @if (!string.IsNullOrEmpty(Model.StoryImageUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.StoryImageUrl" alt="Story" class="img-thumbnail" style="max-width: 200px;">
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Region Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-map-marker-alt me-2 text-warning"></i>Bölge Bölümü
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Bölge Başlık</label>
                        <input asp-for="RegionTitle" class="form-control" placeholder="Manyas Bölgesi">
                        <span asp-validation-for="RegionTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Bölge Alt Başlık</label>
                        <input asp-for="RegionSubtitle" class="form-control" placeholder="Doğal Zenginlikler">
                        <span asp-validation-for="RegionSubtitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Bölge İçeriği</label>
                        <textarea asp-for="RegionContent" class="form-control" rows="6" placeholder="Bölge içeriği..."></textarea>
                        <span asp-validation-for="RegionContent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Bölge Resmi</label>
                        <input type="file" name="regionImageFile" class="form-control" accept="image/*">
                        @if (!string.IsNullOrEmpty(Model.RegionImageUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.RegionImageUrl" alt="Region" class="img-thumbnail" style="max-width: 200px;">
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Values Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-heart me-2 text-danger"></i>Değerlerimiz Bölümü
                    </h4>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Değerler Başlık</label>
                        <input asp-for="ValuesTitle" class="form-control" placeholder="Değerlerimiz">
                        <span asp-validation-for="ValuesTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Değerler Alt Başlık</label>
                        <input asp-for="ValuesSubtitle" class="form-control" placeholder="Kalite ve Güven">
                        <span asp-validation-for="ValuesSubtitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Değerler İçeriği</label>
                        <textarea asp-for="ValuesContent" class="form-control" rows="4" placeholder="Değerler içeriği..."></textarea>
                        <span asp-validation-for="ValuesContent" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Mission & Vision Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-bullseye me-2 text-info"></i>Misyon ve Vizyon
                    </h4>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Misyon Başlık</label>
                        <input asp-for="MissionTitle" class="form-control" placeholder="Misyonumuz">
                        <span asp-validation-for="MissionTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Misyon İçeriği</label>
                        <textarea asp-for="MissionContent" class="form-control" rows="4" placeholder="Misyon içeriği..."></textarea>
                        <span asp-validation-for="MissionContent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Vizyon Başlık</label>
                        <input asp-for="VisionTitle" class="form-control" placeholder="Vizyonumuz">
                        <span asp-validation-for="VisionTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Vizyon İçeriği</label>
                        <textarea asp-for="VisionContent" class="form-control" rows="4" placeholder="Vizyon içeriği..."></textarea>
                        <span asp-validation-for="VisionContent" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        $(document).ready(function() {
            $('form').on('submit', function() {
                var isValid = true;
                
                // Check required fields
                $('input[required], textarea[required]').each(function() {
                    if (!$(this).val()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (!isValid) {
                    alert('Lütfen tüm zorunlu alanları doldurun.');
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
