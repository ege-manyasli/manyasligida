@model IEnumerable<manyasligida.Models.Product>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Ürün Listesi</h1>
            <p class="page-subtitle">Tüm ürünleri görüntüleyin ve yönetin</p>
        </div>
        <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Ürün
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-box me-2"></i>Ürünler</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                    }
                                    else
                                    {
                                        <div style="width: 50px; height: 50px; background: #f8f9fa; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <strong>@product.Name</strong>
                                        <br>
                                        <small class="text-muted">@product.Weight</small>
                                    </div>
                                </td>
                                <td>@product.Category?.Name</td>
                                <td>
                                    <strong class="text-primary">₺@product.Price.ToString("0.00")</strong>
                                    @if (product.OldPrice > product.Price)
                                    {
                                        <br>
                                        <small class="text-muted text-decoration-line-through">₺@product.OldPrice?.ToString("0.00")</small>
                                    }
                                </td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>@product.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteProduct" method="post" style="display: inline;" onsubmit="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz ürün bulunmuyor</h5>
                <p class="text-muted">İlk ürününüzü eklemek için yukarıdaki butonu kullanın.</p>
            </div>
        }
    </div>
</div> 