@{
    ViewData["Title"] = "Admin Dashboard - Manyaslı Gıda";
    Layout = "_AdminLayout";
}

<!-- Dashboard Header -->
<div class="dashboard-header mb-4">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="h3 mb-0">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                Admin Dashboard
            </h1>
            <p class="text-muted mb-0">Hoş geldiniz! İşte sitenizin genel durumu</p>
        </div>
        <div class="col-md-6 text-end">
            <div class="current-time">
                <i class="fas fa-clock me-2"></i>
                <span id="currentTime"></span>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card bg-gradient bg-primary text-white modern-card">
            <div class="stat-card-body position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="stat-number display-6 fw-bold mb-1">@ViewBag.TotalProducts</h3>
                        <p class="stat-label mb-0 text-white-50">Toplam Ürün</p>
                        <small class="change-indicator text-white-75">
                            <i class="fas fa-arrow-up me-1"></i>+12% bu ay
                        </small>
                    </div>
                    <div class="stat-icon-modern">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
                <div class="card-glow"></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card bg-gradient bg-success text-white modern-card">
            <div class="stat-card-body position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="stat-number display-6 fw-bold mb-1">@ViewBag.TotalOrders</h3>
                        <p class="stat-label mb-0 text-white-50">Toplam Sipariş</p>
                        <small class="change-indicator text-white-75">
                            <i class="fas fa-arrow-up me-1"></i>+8% bu ay
                        </small>
                    </div>
                    <div class="stat-icon-modern">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                </div>
                <div class="card-glow"></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card bg-gradient bg-warning text-white modern-card">
            <div class="stat-card-body position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="stat-number display-6 fw-bold mb-1">@ViewBag.TotalUsers</h3>
                        <p class="stat-label mb-0 text-white-50">Kayıtlı Kullanıcı</p>
                        <small class="change-indicator text-white-75">
                            <i class="fas fa-arrow-up me-1"></i>+15% bu ay
                        </small>
                    </div>
                    <div class="stat-icon-modern">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="card-glow"></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card bg-gradient bg-danger text-white modern-card">
            <div class="stat-card-body position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="stat-number display-6 fw-bold mb-1">@ViewBag.UnreadMessages</h3>
                        <p class="stat-label mb-0 text-white-50">Okunmamış Mesaj</p>
                        <small class="change-indicator text-white-75">
                            <i class="fas fa-exclamation-triangle me-1"></i>Yeni mesajlar
                        </small>
                    </div>
                    <div class="stat-icon-modern">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
                <div class="card-glow"></div>
            </div>
        </div>
    </div>
</div>

<!-- Modern Dashboard Widgets -->
<div class="row mb-4">
    <!-- Quick Actions Widget -->
    <div class="col-lg-4 mb-4">
        <div class="card modern-widget h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="fas fa-bolt me-2 text-primary"></i>Hızlı İşlemler
                </h5>
                <div class="quick-actions">
                    <a href="@Url.Action("AddProduct", "Admin")" class="quick-action-btn">
                        <i class="fas fa-plus"></i>
                        <span>Yeni Ürün</span>
                    </a>
                    <a href="@Url.Action("Orders", "Admin")" class="quick-action-btn">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Siparişler</span>
                    </a>
                    <a href="@Url.Action("Messages", "Admin")" class="quick-action-btn">
                        <i class="fas fa-envelope"></i>
                        <span>Mesajlar</span>
                    </a>
                    <a href="@Url.Action("Reports", "Admin")" class="quick-action-btn">
                        <i class="fas fa-chart-bar"></i>
                        <span>Raporlar</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Widget -->
    <div class="col-lg-4 mb-4">
        <div class="card modern-widget h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="fas fa-clock me-2 text-info"></i>Son Aktiviteler
                </h5>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon bg-success">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1 fw-semibold">Yeni sipariş alındı</p>
                            <small class="text-muted">2 dakika önce</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon bg-primary">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1 fw-semibold">Yeni üye kaydı</p>
                            <small class="text-muted">15 dakika önce</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon bg-warning">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="activity-content">
                            <p class="mb-1 fw-semibold">Stok uyarısı</p>
                            <small class="text-muted">1 saat önce</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status Widget -->
    <div class="col-lg-4 mb-4">
        <div class="card modern-widget h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="fas fa-server me-2 text-success"></i>Sistem Durumu
                </h5>
                <div class="system-status">
                    <div class="status-item">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Server Durumu</span>
                            <span class="badge bg-success">Çevrimiçi</span>
                        </div>
                        <div class="progress mb-3" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 98%"></div>
                        </div>
                    </div>
                    <div class="status-item">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Veritabanı</span>
                            <span class="badge bg-success">Aktif</span>
                        </div>
                        <div class="progress mb-3" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 96%"></div>
                        </div>
                    </div>
                    <div class="status-item">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Disk Kullanımı</span>
                            <span class="badge bg-warning">75%</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" style="width: 75%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Revenue Card -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card modern-card revenue-card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="card-title mb-2">
                            <i class="fas fa-chart-line me-2 text-success"></i>
                            Toplam Gelir
                        </h5>
                        <h2 class="text-success mb-0">₺@ViewBag.TotalRevenue.ToString("0.00")</h2>
                        <p class="text-muted mb-0">Teslim edilen siparişlerden elde edilen gelir</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="revenue-chart">
                            <i class="fas fa-chart-pie fa-4x text-success opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders and Messages -->
<div class="row g-4">
    <!-- Recent Orders -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-shopping-bag me-2 text-primary"></i>
                    Son Siparişler
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Müşteri</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentOrders != null)
                            {
                                @foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-light text-dark">#@order.OrderNumber</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <i class="fas fa-user-circle fa-lg text-primary"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@order.CustomerName</div>
                                                    <small class="text-muted">@order.CustomerEmail</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">₺@order.TotalAmount.ToString("0.00")</span>
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = order.OrderStatus switch
                                                {
                                                    "Pending" => "bg-warning",
                                                    "Processing" => "bg-info",
                                                    "Shipped" => "bg-primary",
                                                    "Delivered" => "bg-success",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                                var statusText = order.OrderStatus switch
                                                {
                                                    "Pending" => "Beklemede",
                                                    "Processing" => "İşleniyor",
                                                    "Shipped" => "Kargoda",
                                                    "Delivered" => "Teslim Edildi",
                                                    "Cancelled" => "İptal Edildi",
                                                    _ => order.OrderStatus
                                                };
                                            }
                                            <span class="badge @statusClass">@statusText</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("OrderDetail", "Admin", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                        <p class="text-muted mb-0">Henüz sipariş bulunmuyor</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-primary">
                    <i class="fas fa-list me-2"></i>Tüm Siparişleri Görüntüle
                </a>
            </div>
        </div>
    </div>

    <!-- Recent Messages -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-envelope me-2 text-warning"></i>
                    Son Mesajlar
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="message-list">
                    @if (ViewBag.RecentMessages != null)
                    {
                        @foreach (var message in ViewBag.RecentMessages)
                        {
                            <div class="message-item @(!message.IsRead ? "unread" : "")">
                                <div class="message-avatar">
                                    <i class="fas fa-user-circle fa-lg text-primary"></i>
                                </div>
                                <div class="message-content">
                                    <div class="message-header">
                                        <h6 class="message-sender mb-1">@message.Name</h6>
                                        <small class="text-muted">@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <p class="message-subject mb-1">@message.Subject</p>
                                    <p class="message-preview mb-0">@(message.Message.Length > 50 ? message.Message.Substring(0, 50) + "..." : message.Message)</p>
                                </div>
                                <div class="message-actions">
                                    <a href="@Url.Action("MessageDetail", "Admin", new { id = message.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">Henüz mesaj bulunmuyor</p>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("Messages", "Admin")" class="btn btn-warning">
                    <i class="fas fa-list me-2"></i>Tüm Mesajları Görüntüle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2 text-info"></i>
                    Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-box me-2"></i>Ürünleri Yönet
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-success w-100">
                            <i class="fas fa-shopping-cart me-2"></i>Siparişleri Görüntüle
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Messages", "Admin")" class="btn btn-outline-warning w-100">
                            <i class="fas fa-envelope me-2"></i>Mesajları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
    }

    .current-time {
        font-size: 1.1rem;
        font-weight: 500;
    }

    .stat-card {
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .stat-icon {
        opacity: 0.8;
    }

    .revenue-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .revenue-chart {
        opacity: 0.3;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e9ecef;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        color: var(--text-dark);
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .message-list {
        max-height: 400px;
        overflow-y: auto;
    }

    .message-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #f0f0f0;
        transition: background-color 0.3s ease;
    }

        .message-item:last-child {
            border-bottom: none;
        }

        .message-item:hover {
            background-color: #f8f9fa;
        }

        .message-item.unread {
            background-color: #fff3cd;
        }

    .message-avatar {
        margin-right: 1rem;
    }

    .message-content {
        flex: 1;
    }

    .message-sender {
        font-weight: 600;
        color: var(--text-dark);
    }

    .message-subject {
        font-weight: 500;
        color: var(--primary-color);
    }

    .message-preview {
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .message-actions {
        margin-left: 1rem;
    }

    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        border-radius: 20px;
        padding: 0.5rem 1rem;
    }

    @@media (max-width: 768px) {
        .dashboard-header {
            padding: 1.5rem;
        }

        .stat-number {
            font-size: 2rem;
        }

        .message-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .message-actions {
            margin-left: 0;
            margin-top: 1rem;
        }
    }
</style>

<script>
    // Update current time
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleString('tr-TR', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });
        document.getElementById('currentTime').textContent = timeString;
    }

    // Update time every second
    updateTime();
    setInterval(updateTime, 1000);
</script> 