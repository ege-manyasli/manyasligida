@model manyasligida.Models.FAQ
@{
    ViewData["Title"] = "SSS Ekle";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">SSS Ekle</h1>
            <p class="page-subtitle">Yeni sıkça sorulan soru ekleyin</p>
        </div>
        <a href="@Url.Action("FAQ", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Yeni SSS</h5>
    </div>
    <div class="card-body">
        <form asp-action="AddFAQ" method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Question" class="form-label">Soru</label>
                        <input asp-for="Question" class="form-control" placeholder="Sıkça sorulan soru" required>
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Answer" class="form-label">Cevap</label>
                        <textarea asp-for="Answer" class="form-control" rows="5" placeholder="Soruya verilecek cevap" required></textarea>
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Kategori</label>
                        <input asp-for="Category" class="form-control" placeholder="Örn: Genel, Sipariş, Teslimat">
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label">Görüntüleme Sırası</label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" value="0">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("FAQ", "Admin")" class="btn btn-outline-secondary">İptal</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </div>
        </form>
    </div>
</div> 