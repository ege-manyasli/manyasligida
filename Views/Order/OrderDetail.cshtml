@model manyasligida.Models.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Sipariş Detayı</h2>
                <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Siparişlerime Dön
                </a>
            </div>
            
            <div class="row">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5>Sipariş Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Sipariş No:</strong> @Model.OrderNumber</p>
                                    <p><strong>Sipariş Tarihi:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                                    <p><strong>Durum:</strong> 
                                        <span class="badge bg-@(Model.OrderStatus switch {
                                            "Pending" => "warning",
                                            "Processing" => "info",
                                            "Shipped" => "primary",
                                            "Delivered" => "success",
                                            "Cancelled" => "danger",
                                            _ => "secondary"
                                        })">
                                            @Model.OrderStatus
                                        </span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Ödeme Durumu:</strong> @Model.PaymentStatus</p>
                                    @if (Model.ShippedDate.HasValue)
                                    {
                                        <p><strong>Kargo Tarihi:</strong> @Model.ShippedDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                    }
                                    @if (Model.DeliveredDate.HasValue)
                                    {
                                        <p><strong>Teslim Tarihi:</strong> @Model.DeliveredDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5>Sipariş Ürünleri</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Ürün</th>
                                            <th>Miktar</th>
                                            <th>Birim Fiyat</th>
                                            <th>Toplam</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.UnitPrice.ToString("C")</td>
                                                <td>@item.TotalPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5>Teslimat Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Ad Soyad:</strong> @Model.CustomerName</p>
                            <p><strong>E-posta:</strong> @Model.CustomerEmail</p>
                            <p><strong>Telefon:</strong> @Model.CustomerPhone</p>
                            <p><strong>Adres:</strong> @Model.ShippingAddress</p>
                            @if (!string.IsNullOrEmpty(Model.City))
                            {
                                <p><strong>Şehir:</strong> @Model.City</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.PostalCode))
                            {
                                <p><strong>Posta Kodu:</strong> @Model.PostalCode</p>
                            }
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header">
                            <h5>Fiyat Özeti</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Ara Toplam:</span>
                                <span>@Model.SubTotal.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Kargo:</span>
                                <span>@Model.ShippingCost.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>KDV:</span>
                                <span>@Model.TaxAmount.ToString("C")</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Toplam:</span>
                                <span class="text-primary">@Model.TotalAmount.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5>Sipariş Notu</h5>
                            </div>
                            <div class="card-body">
                                <p>@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 