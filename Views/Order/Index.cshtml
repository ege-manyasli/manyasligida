@model IEnumerable<manyasligida.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Siparişlerim</h2>
            
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <p>Henüz siparişiniz bulunmuyor.</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary">Alışverişe Başla</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sipariş No</th>
                                <th>Tarih</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderNumber</td>
                                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                    <td>
                                        <span class="badge bg-@(order.OrderStatus switch {
                                            "Pending" => "warning",
                                            "Processing" => "info",
                                            "Shipped" => "primary",
                                            "Delivered" => "success",
                                            "Cancelled" => "danger",
                                            _ => "secondary"
                                        })">
                                            @order.OrderStatus
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("OrderDetail", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                            Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div> 