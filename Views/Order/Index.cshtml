<script>
    function updateQuantity(itemId, change) {
        const input = document.getElementById(`qty${itemId}`);
        const newValue = parseInt(input.value) + change;
        
        if (newValue >= 1 && newValue <= 10) {
            input.value = newValue;
            updateTotalPrice(itemId);
        }
    }

    function updateTotalPrice(itemId) {
        const quantity = parseInt(document.getElementById(`qty${itemId}`).value);
        const prices = {
            1: 45.00,
            2: 35.00,
            3: 28.00
        };
        
        const totalPrice = quantity * prices[itemId];
        const totalElement = document.querySelector(`#qty${itemId}`).closest('.cart-item').querySelector('.total-price');
        totalElement.textContent = `₺${totalPrice.toFixed(2)}`;
        
        updateOrderSummary();
    }

    function updateOrderSummary() {
        // Calculate totals
        let subtotal = 0;
        document.querySelectorAll('.total-price').forEach(element => {
            const price = parseFloat(element.textContent.replace('₺', ''));
            subtotal += price;
        });
        
        const kdv = subtotal * 0.08;
        const total = subtotal + kdv;
        
        // Update summary
        document.querySelector('.order-details').innerHTML = `
            <div class="d-flex justify-content-between mb-2">
                <span>Ara Toplam:</span>
                <span>₺${subtotal.toFixed(2)}</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span>Kargo:</span>
                <span class="text-success">Ücretsiz</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span>KDV (%8):</span>
                <span>₺${kdv.toFixed(2)}</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between fw-bold fs-5">
                <span>Toplam:</span>
                <span class="text-primary">₺${total.toFixed(2)}</span>
            </div>
        `;
    }

    function removeItem(itemId) {
        if (confirm('Bu ürünü sepetten kaldırmak istediğinizden emin misiniz?')) {
            const cartItem = document.querySelector(`#qty${itemId}`).closest('.cart-item');
            cartItem.remove();
            updateOrderSummary();
            
            // Update cart count
            const cartCount = document.querySelectorAll('.cart-item').length;
            document.querySelector('.card-header h5').textContent = `Sepetim (${cartCount} Ürün)`;
        }
    }

    function applyCoupon() {
        const couponCode = document.getElementById('couponCode').value;
        if (couponCode.trim() === '') {
            alert('Lütfen bir indirim kodu girin.');
            return;
        }
        
        // Simulate coupon application
        alert(`"${couponCode}" indirim kodu uygulandı! %10 indirim kazandınız.`);
        document.getElementById('couponCode').value = '';
    }

    function proceedToCheckout() {
        const cartCount = document.querySelectorAll('.cart-item').length;
        if (cartCount === 0) {
            alert('Sepetinizde ürün bulunmuyor.');
            return;
        }
        
        // Redirect to checkout page
        window.location.href = '@Url.Action("Checkout", "Order")';
    }

    function saveForLater() {
        alert('Ürünler favorilerinize eklendi!');
    }

    function addToCartFromRecommendation(productId) {
        alert('Ürün sepete eklendi!');
        // Add to cart logic here
    }

    // Initialize order summary
    document.addEventListener('DOMContentLoaded', function() {
        updateOrderSummary();
    });
</script> 