@model manyasligida.Models.OrderViewModel

@{
    ViewData["Title"] = "Ödeme";
    var cart = ViewBag.Cart as List<manyasligida.Models.CartItem> ?? new List<manyasligida.Models.CartItem>();
    var cartTotal = ViewBag.CartTotal as decimal? ?? 0;
    var user = ViewBag.User as manyasligida.Models.User;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4>Ödeme Bilgileri</h4>
                </div>
                <div class="card-body">
                    <form asp-action="PlaceOrder" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerName" class="form-label">Ad Soyad *</label>
                                <input asp-for="CustomerName" class="form-control" value="@user?.FullName" required>
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerEmail" class="form-label">E-posta *</label>
                                <input asp-for="CustomerEmail" type="email" class="form-control" value="@user?.Email" required>
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerPhone" class="form-label">Telefon *</label>
                                <input asp-for="CustomerPhone" class="form-control" value="@user?.Phone" required>
                                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label">Şehir</label>
                                <input asp-for="City" class="form-control" value="@user?.City">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">Teslimat Adresi *</label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3" required>@user?.Address</textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PostalCode" class="form-label">Posta Kodu</label>
                                <input asp-for="PostalCode" class="form-control" value="@user?.PostalCode">
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Sipariş Notu</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Siparişinizle ilgili özel notlarınız..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Sepete Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-credit-card me-2"></i>Siparişi Tamamla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5>Sipariş Özeti</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in cart)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Quantity x Ürün</span>
                            <span>₺@item.TotalPrice.ToString("0.00")</span>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Ara Toplam:</span>
                        <span>₺@cartTotal.ToString("0.00")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Kargo:</span>
                        <span class="text-success">Ücretsiz</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>KDV:</span>
                        <span>₺@((cartTotal * 0.18m).ToString("0.00"))</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Toplam:</span>
                        <span class="text-primary">₺@((cartTotal * 1.18m).ToString("0.00"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 