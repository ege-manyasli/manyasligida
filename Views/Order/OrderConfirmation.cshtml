@model manyasligida.Models.Order

@{
    ViewData["Title"] = "Sipariş Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-success mb-3">Siparişiniz Başarıyla Oluşturuldu!</h2>
                    <p class="card-text mb-4">Sipariş numaranız: <strong>@Model.OrderNumber</strong></p>
                    
                    <div class="alert alert-info">
                        <p class="mb-2">Siparişiniz alındı ve işleme alındı. Sipariş durumunuzu takip etmek için e-posta adresinizi kontrol edin.</p>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5>Sipariş Detayları</h5>
                            <p><strong>Sipariş Tarihi:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                            <p><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("C")</p>
                            <p><strong>Durum:</strong> @Model.OrderStatus</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Teslimat Bilgileri</h5>
                            <p><strong>Ad Soyad:</strong> @Model.CustomerName</p>
                            <p><strong>Telefon:</strong> @Model.CustomerPhone</p>
                            <p><strong>Adres:</strong> @Model.ShippingAddress</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                        <a href="@Url.Action("Index", "Order")" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>Siparişlerimi Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 