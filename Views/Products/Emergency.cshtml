@{
    ViewData["Title"] = "Emergency Test";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <h4>@ViewBag.Message</h4>
                <p>Bu sayfa çalışıyorsa Products controller'ı çalışıyor demektir.</p>
                @if (ViewBag.ProductCount != null)
                {
                    <p><strong>Ürün Sayısı:</strong> @ViewBag.ProductCount</p>
                    <p><strong>Kategori Sayısı:</strong> @ViewBag.CategoryCount</p>
                }
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Test Linkleri</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary me-2">Ana Ürünler Sayfası</a>
                    <a href="@Url.Action("Emergency", "Products")" class="btn btn-secondary me-2">Emergency Test</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success">Ana Sayfa</a>
                </div>
            </div>
            
            @if (ViewBag.CategoryDetails != null)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5>Kategori Detayları</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Kategori Adı</th>
                                        <th>Görüntüleme Sırası</th>
                                        <th>Aktif</th>
                                        <th>Ürün Sayısı</th>
                                        <th>Test Link</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (dynamic category in ViewBag.CategoryDetails)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>@category.Name</td>
                                            <td>@category.DisplayOrder</td>
                                            <td>
                                                @if (category.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>@category.ProductCount</td>
                                            <td>
                                                <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    Kategoriyi Test Et
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
