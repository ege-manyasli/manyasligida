@{
    ViewData["Title"] = "Emergency Test";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <h4>@ViewBag.Message</h4>
                <p>Bu sayfa çalışıyorsa Products controller'ı çalışıyor demektir.</p>
                @if (ViewBag.ProductCount != null)
                {
                    <p><strong>Ürün Sayısı:</strong> @ViewBag.ProductCount</p>
                    <p><strong>Kategori Sayısı:</strong> @ViewBag.CategoryCount</p>
                }
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Test Linkleri</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary me-2">Ana Ürünler Sayfası</a>
                    <a href="@Url.Action("Emergency", "Products")" class="btn btn-secondary me-2">Emergency Test</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-success">Ana Sayfa</a>
                </div>
            </div>
        </div>
    </div>
</div>
