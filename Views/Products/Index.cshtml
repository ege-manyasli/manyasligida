@model IEnumerable<manyasligida.Models.Product>
@{
    ViewData["Title"] = "Ürünlerimiz - Manyaslı Gıda";
}
<section class="page-header" style="background: var(--gradient-primary); padding: 140px 0 100px; position: relative; overflow: hidden;">
    <div class="container text-center position-relative" style="z-index: 2;">
        <h1 class="text-white fw-bold mb-4" style="font-size: 3.5rem; text-shadow: 0 4px 8px rgba(0,0,0,0.3);">
            <i class="fas fa-box-open me-3"></i>Ürünlerimiz
        </h1>
        <p class="text-white lead mb-0" style="font-size: 1.25rem; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
            Manyas'ın bereketli topraklarından sofralarınıza uzanan doğal lezzetler
        </p>
    </div>
    
    <!-- Decorative Elements -->
    <div class="position-absolute top-0 left-0 w-100 h-100" style="z-index: 1;">
        <div class="position-absolute" style="top: 20%; left: 10%; width: 60px; height: 60px; background: rgba(255,255,255,0.1); border-radius: 50%; animation: float 6s ease-in-out infinite;"></div>
        <div class="position-absolute" style="top: 60%; right: 15%; width: 40px; height: 40px; background: rgba(255,255,255,0.1); border-radius: 50%; animation: float 8s ease-in-out infinite reverse;"></div>
        <div class="position-absolute" style="bottom: 30%; left: 20%; width: 50px; height: 50px; background: rgba(255,255,255,0.1); border-radius: 50%; animation: float 7s ease-in-out infinite;"></div>
    </div>
</section>

<section class="section-padding bg-light">
    <div class="container">
        <!-- Modern Search and Filter Section -->
        <div class="row mb-5">
            <div class="col-lg-8">
                <form method="get" action="@Url.Action("Search", "Products")" class="search-form">
                    <div class="input-group input-group-lg shadow-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" name="q" class="form-control border-start-0 ps-0" 
                               placeholder="Ürün ara..." value="@ViewBag.SearchTerm"
                               style="border-radius: 0 var(--border-radius-lg) var(--border-radius-lg) 0;">
                        <button class="btn btn-primary px-4" type="submit" 
                                style="border-radius: 0 var(--border-radius-lg) var(--border-radius-lg) 0;">
                            <i class="fas fa-search me-2"></i>Ara
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <select class="form-select form-select-lg shadow-sm" id="sortSelect" onchange="changeSort(this.value)">
                    <option value="name">İsme Göre Sırala</option>
                    <option value="price">Fiyat (Düşük-Yüksek)</option>
                    <option value="price_desc">Fiyat (Yüksek-Düşük)</option>
                    <option value="new">En Yeni</option>
                    <option value="popular">Popüler</option>
                </select>
            </div>
        </div>

        <!-- Modern Category Filter -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="filter-section" data-aos="fade-up">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <a href="@Url.Action("Index", "Products")" 
                           class="btn @(ViewBag.SelectedCategoryId == null ? "btn-primary" : "btn-outline-primary") btn-lg px-4 py-3 rounded-pill shadow-sm">
                            <i class="fas fa-th-large me-2"></i>Tümü
                        </a>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })"
                               class="btn @(ViewBag.SelectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary") btn-lg px-4 py-3 rounded-pill shadow-sm">
                                <i class="fas fa-tag me-2"></i>@category.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5" data-aos="fade-up">
                <div class="mb-4">
                    <i class="fas fa-search" style="font-size: 4rem; color: var(--text-muted);"></i>
                </div>
                <h3 class="mb-3 fw-bold">Aradığınız kriterlere uygun ürün bulunamadı</h3>
                <p class="text-muted mb-4 lead">Farklı arama kriterleri deneyebilir veya tüm ürünlerimize göz atabilirsiniz.</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-modern btn-lg">
                    <i class="fas fa-th-large me-2"></i>Tüm Ürünleri Gör
                </a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card product-card h-100">
                            <div class="product-image position-relative">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                


                                
                                <!-- Product Overlay -->
                                <div class="product-overlay">
                                    <div class="overlay-content">
                                        <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-light">
                                            <i class="fas fa-eye me-2"></i>İncele
                                        </a>
                                        <button class="btn btn-primary" onclick="addToCart(@product.Id)" data-product-id="@product.Id">
                                            <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <!-- Product Title -->
                                <h5 class="card-title fw-bold mb-2">@product.Name</h5>
                                
                                <!-- Product Weight -->
                                <p class="card-text text-muted mb-2">
                                    <i class="fas fa-weight-hanging me-1"></i>@product.Weight
                                </p>
                                
                                <!-- Price Section -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="price-section">
                                        <span class="product-price">₺@product.Price.ToString("0.00")</span>
                                    </div>
                                    <span class="badge bg-primary px-2 py-1 rounded-pill">
                                        <i class="fas fa-percentage me-1"></i>@product.FatContent
                                    </span>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary btn-sm" onclick="addToCart(@product.Id)" data-product-id="@product.Id">
                                            <i class="fas fa-shopping-cart me-1"></i>Sepete Ekle
                                        </button>
                                        <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-info-circle me-1"></i>Detayları Gör
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <div class="row mt-5">
                    <div class="col-12">
                        <nav aria-label="Sayfalama" class="d-flex justify-content-center">
                            <ul class="pagination pagination-lg">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link rounded-pill me-2" href="@Url.Action("Index", "Products", new { page = ViewBag.CurrentPage - 1, categoryId = ViewBag.SelectedCategoryId, sort = ViewBag.SortOrder })">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link rounded-pill mx-1" href="@Url.Action("Index", "Products", new { page = i, categoryId = ViewBag.SelectedCategoryId, sort = ViewBag.SortOrder })">@i</a>
                                    </li>
                                }
                                
                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link rounded-pill ms-2" href="@Url.Action("Index", "Products", new { page = ViewBag.CurrentPage + 1, categoryId = ViewBag.SelectedCategoryId, sort = ViewBag.SortOrder })">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        }
    </div>
</section>

<style>
    .product-card {
        border-radius: 18px;
        background: #fff;
        box-shadow: 0 6px 15px rgba(0,0,0,0.07);
        border: none;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .product-card .card-body {
        padding: 1.25rem;
    }

        .product-card:hover {
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
            transform: translateY(-5px);
        }

    .product-image {
        height: 280px;
        overflow: hidden;
        position: relative;
        border-radius: 18px 18px 0 0;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .overlay-content {
        text-align: center;
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #e74c3c;
    }



    .filter-section .btn-group {
        flex-wrap: nowrap;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        gap: 8px;
    }

        .filter-section .btn-group::-webkit-scrollbar {
            display: none;
        }

    .pagination .page-link {
        border: none;
        color: var(--primary-color);
        padding: 12px 16px;
        margin: 0 2px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .pagination .page-link:hover {
            background: var(--primary-color);
            color: white;
        }

    .pagination .page-item.active .page-link {
        background: var(--primary-color);
        color: white;
    }
</style>

<script>
    function changeSort(value) {
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.set('sort', value);
        window.location.href = window.location.pathname + '?' + urlParams.toString();
    }

    document.addEventListener('DOMContentLoaded', function () {
        const urlParams = new URLSearchParams(window.location.search);
        const currentSort = urlParams.get('sort') || 'name';
        document.getElementById('sortSelect').value = currentSort;
    });
</script>
