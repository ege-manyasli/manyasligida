<script>
    function changeImage(thumbnail, imageSrc) {
        // Remove active class from all thumbnails
        document.querySelectorAll('.thumbnail-img').forEach(img => {
            img.classList.remove('active');
        });
        
        // Add active class to clicked thumbnail
        thumbnail.classList.add('active');
        
        // Change main image
        document.getElementById('mainImage').src = imageSrc.replace('~/', '/');
    }

    function decreaseQuantity() {
        const input = document.getElementById('quantity');
        if (input.value > 1) {
            input.value = parseInt(input.value) - 1;
        }
    }

    function increaseQuantity() {
        const input = document.getElementById('quantity');
        if (input.value < 10) {
            input.value = parseInt(input.value) + 1;
        }
    }

    function addToCart() {
        const quantity = document.getElementById('quantity').value;
        // Add to cart logic here
        alert(`${quantity} adet Ezine Peyniri sepete eklendi!`);
    }

    function buyNow() {
        const quantity = document.getElementById('quantity').value;
        // Buy now logic here
        alert(`${quantity} adet Ezine Peyniri için ödeme sayfasına yönlendiriliyorsunuz...`);
    }

    function addToWishlist() {
        alert('Ürün favorilere eklendi!');
    }

    function shareProduct() {
        if (navigator.share) {
            navigator.share({
                title: 'Ezine Peyniri - Manyaslı Gıda',
                text: 'Harika bir lezzet!',
                url: window.location.href
            });
        } else {
            alert('Paylaşım özelliği bu tarayıcıda desteklenmiyor.');
        }
    }

    function showReviewForm() {
        alert('Yorum formu açılacak...');
    }
</script> 