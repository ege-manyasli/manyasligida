@model IEnumerable<manyasligida.Models.Blog>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Blog";
}

<div class="container py-5">
    <h1 class="display-5 mb-4 text-center">Blog / Haberler</h1>
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Henüz blog yazısı bulunmamaktadır.</h3>
            <p class="text-muted">Yakında yeni blog yazıları eklenecektir.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var blog in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" class="card-img-top" alt="@blog.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Blog görseli">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@blog.Title</h5>
                            <p class="card-text text-muted small">
                                @if (blog.PublishedAt.HasValue)
                                {
                                    @blog.PublishedAt.Value.ToString("dd MMMM yyyy")
                                }
                                else
                                {
                                    @blog.CreatedAt.ToString("dd MMMM yyyy")
                                }
                            </p>
                            <p class="card-text flex-grow-1">
                                @if (!string.IsNullOrEmpty(blog.Summary))
                                {
                                    @(blog.Summary.Length > 100 ? blog.Summary.Substring(0, 100) + "..." : blog.Summary)
                                }
                                else if (!string.IsNullOrEmpty(blog.Content))
                                {
                                    @(blog.Content.Length > 100 ? blog.Content.Substring(0, 100) + "..." : blog.Content)
                                }
                                else
                                {
                                    <span class="text-muted">Açıklama bulunmamaktadır.</span>
                                }
                            </p>
                            <a href="@Url.Action("Detail", "Blog", new { id = blog.Id })" class="btn btn-outline-primary btn-sm rounded-pill mt-auto">
                                Devamını Oku
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Blog sayfaları" class="mt-5">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", "Blog", new { page = ViewBag.CurrentPage - 1 })">
                                <i class="fas fa-chevron-left"></i> Önceki
                            </a>
                        </li>
                    }
                    
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Blog", new { page = i })">@i</a>
                        </li>
                    }
                    
                    @if (ViewBag.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", "Blog", new { page = ViewBag.CurrentPage + 1 })">
                                Sonraki <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div> 