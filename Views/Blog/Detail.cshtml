@model manyasligida.Models.Blog
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model?.Title ?? "Blog Detayı";
}

<div class="container py-5">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (Model == null)
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Blog yazısı bulunamadı.</h3>
            <a href="@Url.Action("Index", "Blog")" class="btn btn-primary">Blog Listesine Dön</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <!-- Blog İçeriği -->
                <article class="blog-post">
                    <header class="mb-4">
                        <h1 class="display-4 mb-3">@Model.Title</h1>
                        <div class="text-muted mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>
                            @if (Model.PublishedAt.HasValue)
                            {
                                @Model.PublishedAt.Value.ToString("dd MMMM yyyy, HH:mm")
                            }
                            else
                            {
                                @Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")
                            }
                        </div>
                    </header>
                    
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="blog-image mb-4">
                            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Summary))
                    {
                        <div class="blog-summary mb-4">
                            <div class="alert alert-info">
                                <h5><i class="fas fa-info-circle me-2"></i>Özet</h5>
                                <p class="mb-0">@Model.Summary</p>
                            </div>
                        </div>
                    }
                    
                    <div class="blog-content">
                        @if (!string.IsNullOrEmpty(Model.Content))
                        {
                            @Html.Raw(Model.Content)
                        }
                        else
                        {
                            <p class="text-muted">İçerik bulunmamaktadır.</p>
                        }
                    </div>
                </article>
                
                <!-- Geri Dön Butonu -->
                <div class="mt-5">
                    <a href="@Url.Action("Index", "Blog")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Blog Listesine Dön
                    </a>
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Son Blog Yazıları -->
                @if (ViewBag.RecentBlogs != null && ((IEnumerable<manyasligida.Models.Blog>)ViewBag.RecentBlogs).Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i>Son Blog Yazıları</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var recentBlog in (IEnumerable<manyasligida.Models.Blog>)ViewBag.RecentBlogs)
                            {
                                <div class="recent-blog-item mb-3 pb-3 border-bottom">
                                    <h6 class="mb-1">
                                        <a href="@Url.Action("Detail", "Blog", new { id = recentBlog.Id })" class="text-decoration-none">
                                            @recentBlog.Title
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        @if (recentBlog.PublishedAt.HasValue)
                                        {
                                            @recentBlog.PublishedAt.Value.ToString("dd MMM yyyy")
                                        }
                                        else
                                        {
                                            @recentBlog.CreatedAt.ToString("dd MMM yyyy")
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div> 